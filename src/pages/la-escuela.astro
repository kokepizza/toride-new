---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero/Hero.astro';
import TitleCenter from '../components/TitleCenter/TitleCenter.astro';
import Gallery from '../components/Gallery/Gallery.jsx';
import Instructorxs from '../components/Instructorxs/Instructorxs.astro';
import CTA from '../components/CTA/CTA.astro';

const images = [
  { src: "https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?w=800", alt: "Imagen 1" },
  { src: "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?w=800", alt: "Imagen 2" },
  { src: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=800", alt: "Imagen 3" },
  { src: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=800", alt: "Imagen 4" },
  { src: "https://images.unsplash.com/photo-1517841905240-472988babdf9?w=800", alt: "Imagen 5" },
  { src: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=800", alt: "Imagen 6" }
];
---

<Layout title = "Toride Escuela de Artes Marciales" description = "Escuela de Artes Marciales en Barcelona en el barrio de Fort Pienc. Clases de Kickboxing y defensa personal para todas las edades.">
	<Hero 
		title1 = "La escuela"
		dark = {false}
        rounded = {true}
        bgImage = "https://images.unsplash.com/photo-1656653121475-e33829581294?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
	/>

    <TitleCenter
        title = "Propósito"
        subtitle = "Nuestra misión"
	 	content = "En nuestras clases de artes marciales, nos enfocamos en el kickboxing y la defensa personal para ofrecerte una experiencia completa. Trabajamos la disciplina, la concentración y el respeto, valores esenciales de las artes marciales, mientras te pones en forma y disfrutas del deporte. Además de mejorar tu condición física, aprenderás técnicas efectivas para protegerte y ganar confianza en ti mismo. ¡Ven a sudar la camiseta, a superarte y a formar parte de una comunidad que comparte la pasión por las artes marciales!"
		dark = {false}
	 />

	<Gallery client:load
		images = {images}
		title = "Instalaciones"
		subtitle = "Galería de imágenes"
		dark = {false}
	/>

    <Instructorxs 
		title = "Instructorxs"
		subtitle = "equipo"
		instructor1 = "Maties Tortosa"
		info1 = "Maties es un apasionado del kickboxing y la defensa personal, con más de 10 años de experiencia en la enseñanza de artes marciales. Su enfoque se centra en el desarrollo integral de sus estudiantes, combinando técnica, condición física y valores como el respeto y la disciplina."
		img1 = "https://images.unsplash.com/photo-1608583224016-d7fdbc3bf282?q=80&w=1038&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
		instructor2 = "Laura Payeras"
		info2 = "Laura es experta en defensa personal y ha competido a nivel nacional en diversas disciplinas de artes marciales. Su enfoque se centra en empoderar a sus estudiantes y fomentar un ambiente de respeto y confianza."
		img2 = "https://images.unsplash.com/photo-1608583224016-d7fdbc3bf282?q=80&w=1038&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
		dark = {false}
	/>

	<CTA 
		title = "empezar a entrenar"
		content = "La primera patada es la que cuenta. Escríbenos, ven a probar y siente la energía de Toride. Fuerza, técnica y actitud te esperan. ¡Es tu momento de empezar!"
		dark = {false}
	/>

</Layout>
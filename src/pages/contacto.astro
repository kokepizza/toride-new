---
import Layout from '../layouts/Layout.astro';
import ContactInfo from '../components/ContactInfo/ContactInfo.astro';
import Form from '../components/Form/Form.astro';
import Hero from '../components/Hero/Hero.astro';
---

<Layout>

	<Hero 
		title1 = "Contacto"
		title2 = ""
		dark = {false}
	/>

	 <ContactInfo 
	 	title = "Contacto"
	 	subtitle = "¿Quieres saber más?"
		dark = {false}
	 />

	<Form
		title = "Formulario"
		subtitle = "Contacto"
		content = "Si tienes cualquier duda o quieres contactar con nosotros para hacer una clase de prueba, llámanos o rellena el formulario de contacto y te responderemos lo más pronto posible."
		dark = {false}
	/>

</Layout>
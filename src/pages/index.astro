---
import Preloader from '../components/Preloader/Preloader.jsx';
import Layout from '../layouts/Layout.astro';
import HomeHero from '../components/HomeHero/HomeHero.astro';
import IntroImage from '../components/IntroImage/IntroImage.astro';
import Programs from '../components/Programs/Programs.astro';
import Calendar from '../components/Calendar/Calendar.astro';
import ContactInfo from '../components/ContactInfo/ContactInfo.astro';
---

<Layout title = "Toride Escuela de Artes Marciales" description = "Escuela de Artes Marciales en Barcelona en el barrio de Fort Pienc. Clases de Kickboxing y defensa personal para todas las edades.">

    <Preloader client:only="react" active={true} />

	<HomeHero 
		title1 = "Escuela de"
		title2 = "Artes Marciales"
		tagline = "Disciplina, respeto y confianza en cada movimiento. Entrena con nosotros para fortalecer tu cuerpo y mente, supera tus límites y domina el arte del combate."
	/>

    <IntroImage 
		title = "Defensa Toride"
		subtitle = "qué hacemos"
		content = "En nuestras clases de artes marciales, nos enfocamos en el kickboxing y la defensa personal para ofrecerte una experiencia completa. Trabajamos la disciplina, la concentración y el respeto, valores esenciales de las artes marciales, mientras te pones en forma y disfrutas del deporte. Además de mejorar tu condición física, aprenderás técnicas efectivas para protegerte y ganar confianza en ti mismo. ¡Ven a sudar la camiseta, a superarte y a formar parte de una comunidad que comparte la pasión por las artes marciales!"
		image = "https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?auto=format&fit=crop&w=1600&q=80"
		dark = {false}
	 />

	<Programs
		title = "Programas"
		subtitle = "por edades"
		pequesImg = "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=800&q=80"
		infantilImg = "https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=800&q=80"
		juniorImg = "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?auto=format&fit=crop&w=800&q=80"
		seniorImg = "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?auto=format&fit=crop&w=800&q=80"
		dark = {false}
		layout = "horizontal"
	/>

	<Calendar 
		title = "Calendario"
		subtitle = "horario"
		imgUrl = "https://images.unsplash.com/photo-1575800605380-ca1d27744f2c?q=80&w=1064&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
		pdfUrl = "#"
		dark = {false}
	/>

	 <ContactInfo 
	 	title = "Contacto"
	 	subtitle = "¿Quieres saber más?"
		dark = {false}
	 />
</Layout>
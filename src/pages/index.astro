---
import Preloader from '../components/Preloader/Preloader.jsx';
import Layout from '../layouts/Layout.astro';
import HomeHero from '../components/HomeHero/HomeHero.astro';
import IntroImage from '../components/IntroImage/IntroImage.astro';
import Programs from '../components/Programs/Programs.astro';
import Calendar from '../components/Calendar/Calendar.astro';
import ContactInfo from '../components/ContactInfo/ContactInfo.astro';

const res = await fetch(`${import.meta.env.WP_DOMAIN}/wp-json/wp/v2/pages?slug=home`);
const data = await res.json();

const fields = data[0].acf;

console.log(fields);
---

<Layout title = "Toride Escuela de Artes Marciales" description = "Escuela de Artes Marciales en Barcelona en el barrio de Fort Pienc. Clases de Kickboxing y defensa personal para todas las edades.">

    <Preloader client:only="react" active={true} />

	<HomeHero 
		title1 = {fields.home_title1}
		title2 = {fields.home_title2}
		tagline = {fields.home_tagline}
	/>

    <IntroImage 
		title = {fields.intro_image_title}
		subtitle = {fields.intro_image_subtitle}
		content = {fields.intro_image_content}
		image = {fields.intro_image_img}
		dark = {false}
	 />

	<Programs
		title = {fields.home_programs_title}
		subtitle = {fields.home_programs_subtitle}
		pequesImg = {fields.home_programs_img_peques}
		infantilImg = {fields.home_programs_img_infantil}
		juniorImg = {fields.home_programs_img_junior}
		seniorImg = {fields.home_programs_img_senior}
		dark = {false}
		layout = "horizontal"
	/>

	<Calendar 
		title = {fields.home_calendar_title}
		subtitle = {fields.home_calendar_subtitle}
		imgUrl = {fields.home_calendar_img}
		pdfUrl = {fields.home_calendar_pdf}
		dark = {false}
	/>

	 <ContactInfo 
	 	title = {fields.home_contact_title}
	 	subtitle = {fields.home_contact_subtitle}
		dark = {false}
	 />
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Preloader from '../components/Preloader/Preloader';
import TitleCenter from '../components/TitleCenter/TitleCenter.astro';
import IntroImage from '../components/IntroImage/IntroImage.astro';
import ContactInfo from '../components/ContactInfo/ContactInfo.astro';
import CTA from '../components/CTA/CTA.astro';
import Gallery from '../components/Gallery/Gallery.jsx';
import Form from '../components/Form/Form.astro';

// Estático
const images = [
  { src: "https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?w=800", alt: "Imagen 1" },
  { src: "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?w=800", alt: "Imagen 2" },
  { src: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=800", alt: "Imagen 3" },
  { src: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=800", alt: "Imagen 4" },
  { src: "https://images.unsplash.com/photo-1517841905240-472988babdf9?w=800", alt: "Imagen 5" },
  { src: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=800", alt: "Imagen 6" }
];


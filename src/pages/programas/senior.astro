---
import Layout from "../../layouts/Layout.astro";
import TitleCenter from "../../components/TitleCenter/TitleCenter.astro";
import ProgramInfo from "../../components/ProgramInfo/ProgramInfo.astro";
import CTA from "../../components/CTA/CTA.astro";
import Hero from "../../components/Hero/Hero.astro";
---

<Layout title = "Programa Senior - Toride Escuela de Artes Marciales" description = "Descubre nuestro programa para peques en Toride. Clases de artes marciales diseñadas para niños, enfocadas en el desarrollo físico, mental y social a través del kickboxing y la defensa personal.">

    <Hero 
        title1 = "Programa"
        title2 = "Senior"
        dark = {false}
        rounded = {true}
        bgImage = "https://images.unsplash.com/photo-1516684991026-4c3032a2b4fd?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fG1hcnRpYWwlMjBhcnRzJTIwa2lkc3xlbnwwfHwwfHx8Mg%3D%3D"
    />

    <TitleCenter
        title = "Senior"
        subtitle = "3 a 5 años"
        content = "Nuestro programa para peques está diseñado para introducir a los niños de 3 a 5 años en el mundo de las artes marciales de una manera divertida y segura. A través de juegos y actividades adaptadas a su edad, los niños desarrollan habilidades motoras básicas, coordinación y equilibrio, mientras aprenden valores fundamentales como el respeto, la disciplina y el trabajo en equipo. Nuestras clases fomentan un ambiente positivo y alentador, donde cada peque puede explorar su potencial y ganar confianza en sí mismo. ¡Ven a descubrir la magia de las artes marciales con nosotros!"
        dark = {true}
     />

	<ProgramInfo
		program="senior"
		dark={true}
		age="4-7 AÑOS"
		schedule="L-V 17:30H <br />S 11:15H"
		price="a partir de 60€/mes"
		aprenderas={[
			"Coordinación y equilibrio",
			"Movimientos básicos de las artes marciales",
			"Concentración y autocontrol emocional",
			"Condicionamiento físico adecuado a la edad",
			"Mejora de la flexibilidad y la agilidad",
		]}
		ofrecemos={[
			"Entrenadores/as con títulos nacionales y experiencia profesional",
			"Un entorno educativo, motivador y lleno de pasión por las artes marciales",
			"Evaluaciones semanales para hacer un seguimiento del progreso de tu hijo/a",
			"Revisiones anuales para padres y alumnos para monitorizar la evolución, el desarrollo y fijar nuevos objetivos",
		]}
		image="https://images.unsplash.com/photo-1516684991026-4c3032a2b4fd?q=80&w=2050&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
	/>

    <CTA 
        title = "empezar a entrenar"
        content = "La primera patada es la que cuenta. Escríbenos, ven a probar y siente la energía de Toride. Fuerza, técnica y actitud te esperan. ¡Es tu momento de empezar!"
        dark = {true}
    />
    
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.documentElement.style.setProperty("--main-color", "var(--senior)");
  });
</script>
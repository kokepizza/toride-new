---
import "./form.css";
import "../Button/button.css";

const {
  title = "Título por defecto",
  subtitle = "Subtítulo por defecto",
  content = "Ejemplo de contenido que iría centrado bla bla bla. Si me convirtiese a una relegión lejana y dejara de liarla tanto. Si me estrangulara con el cable de tu secador. Aun así no conseguiría parar ese gesto típico tuyo de apretar el lugar donde nace una lágrima. Sigo viviendo entre la basura que acumula mi casa y la basura que acumulo yo.",
  dark = false
} = Astro.props;
---

<section class={`section grid ${dark ? "dark" : "light"}`}>
  <div class="intro-center">
    <p class="subtitle">{subtitle}</p>
    <h2>{title}</h2>
    <p>{content}</p>
  </div>

  <form method="post" action="/contact" class="form grid" id="form">
    <input type="text" id="name" name="contact[name]" placeholder="Nombre completo" required />
    <input type="email" id="email" name="contact[email]" placeholder="Correo electrónico" required />
    <input type="tel" id="phone" name="contact[phone]" placeholder="Teléfono si prefieres WhatsApp" pattern="[0-9]{9}" />
    
    <select id="reason" name="contact[reason]" required>
      <option value="">Selecciona una opción</option>
      <option value="prueba">Quiero una clase de prueba gratuita</option>
      <option value="programas">Información sobre los programas de entrenamiento</option>
      <option value="precios">Precios y horarios</option>
      <option value="tienda">Tienda (equipamiento y suscripciones)</option>
      <option value="otro">Otro</option>
    </select>

    <textarea name="contact[body]" id="message" placeholder="Escribe tu mensaje" style="resize: none;"></textarea>

    <button class="button" type="submit">
      <span>enviar</span>
      <svg viewBox="0 0 23 15.9" width="20">
        <path d="M14.9,8.7H1c-.4,0-.8-.3-.8-.8s.3-.8.8-.8h13.8c.4,0,.8.3.8.8s-.3.8-.8.8h0Z" />
        <path d="M8.9,14.7c-.2,0-.4,0-.5-.2-.3-.3-.3-.8,0-1.1l5.4-5.4-5.4-5.4c-.3-.3-.3-.8,0-1.1s.8-.3,1.1,0l6,6c.3.3.3.8,0,1.1l-6,6c-.1.1-.3.2-.5.2h-.1Z" />
      </svg>
    </button>
  </form>
</section>
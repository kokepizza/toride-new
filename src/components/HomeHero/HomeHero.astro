---
import "./home-hero.css";
import Button from "../Button/Button.astro";

const {
    title1="Lorem",
    title2="Ipsum",
    tagline="Dolor sit amet",
    heroImg="/hero-home.jpeg",
    claseGratisImg="/clase_gratis_1.png"
} = Astro.props;
---

<section
  class="home-hero"
  style={`background-image: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,.9) 100%), url('${heroImg}');`}
>
  <div class="home-hero__content">
    <h1>{title1} <br /> {title2}</h1>
    <p>{tagline}</p>
    <Button text="quiero probar" link="/contact#form"/>
  </div>
  <a href="/contact#form" class="clase_gratis">
    <img src={claseGratisImg} alt="Primera clase gratis" />
  </a>
</section>
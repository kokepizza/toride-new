---
import Button from "../Button/Button.astro";

const { 
    title = "título",
    subtitle = "subtítulo",
    imgUrl = "https://images.unsplash.com/photo-1575800605380-ca1d27744f2c?q=80&w=1064&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    pdfUrl = "#",
    dark = false } = Astro.props;
---

<section class={`section grid ${dark ? "dark" : "light"}`}>
    <div class="intro-center">
        <p class="subtitle">{subtitle}</p>
        <h2>{title}</h2>
    </div>
    <div class="image full-img">
        <img src={imgUrl} alt={title} class="cover">
    </div>
    <Button text="descarga pdf" link={pdfUrl} />
</section>